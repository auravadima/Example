@media (max-width: 1200px)
  .about
    &-left
      &_staffs
        .staff
          width 31%
          height 15rem
@media (max-width: 1000px)
  .about
    &-left
      &_staffs
        .staff
          width 31%
          height 15rem
@media (max-width: 767px)
  .about
    &-left
      &_staffs
        .staff
          width 47%
          height 20rem
@media (max-width: 700px)
  .opened
    transform translateY(33rem)
    opacity 1 !important
  .contacts
    display none
  .side-menu
    position fixed
    z-index: 2
    width 100%
    left 0
    top -30rem
    height auto
    box-shadow none
    overflow hidden
    transition transform 0.5s , opacity 0.5s
    opacity 0
    &_mobile-head
      display block
      position fixed
      top 0
      right 0
      z-index 3
      height 3rem
      width 100%
      background-color white
      &_img
        height 3rem
        float right
        margin-right 1rem
    &:after
      display none
    &_header
      display none
    &_info
      display none
@media (max-width: 580px)
  .container-fluid
    padding-left 0
  .about
    &-left
      &_staffs
        .staff
          width 100%
          height 20rem
